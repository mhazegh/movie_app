<% if (!user) { %>
    <!--If not logged in, show the pitch.-->
    <div class='row-fluid'>
	  <a href="/auth/google" class="btn btn-success btn-large span4 offset4">Sign in with Google</a>
    </div>
    <div class='row-fluid'>
    </div>
<% } else { %>
    <!--If logged in, display the movies. -->
	<script src="/js/rank_movies_new.js"></script>
    <div class="row-fluid section1">
      <div class="span3 offset1 asset">
        <div class="sort_options">Search by genre</div>
        <select id="genre_field"></select>
        <button class="btn btn-success btn-large" id="genre_btn">Booyah</button>
      </div>      
      <div class="span3 offset1 asset">
        <div class="sort_options">Search by actor</div>
        <input type="text" data-provide="typeahead" placeholder="Who do you want to see?" id="actor_field">
        <button class="btn btn-success btn-large" id="actor_btn">Kazaam</button>
      </div>
      <div class="span3 offset1 asset">
        <div class="sort_options">Similar to ...</div>
        <input type="text" data-provide="typeahead" placeholder="What movie do you like?" id="similar_field">
        <button class="btn btn-success btn-large" id="similar_btn">Wagwan</button>
      </div>
      <br>
      <div class="row-fluid" id='help_div'>
        <div class="span9 offset1">
          <h4 class="text-center" id="help_msg"></h4>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span9 offset1">
          <div id='sortby'></div>
        </div>
      </div>
      <div class="row-fluid">
        <div class="span10 offset1">
          <table class="table results table-condensed" id="data">
            <tbody>
            </tbody>
          </table>
        </div>
      </div>
    </div>
<% } %>
